{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    // --------------
    "declaration": true, // 타입 정의 파일을 생성
    "emitDeclarationOnly": false, // + JavaScript 파일도 생성
    "noEmit": false,

    /* Linting */
    "strict": false, // 엄격한 타입 검사를 비활성화
    "noUnusedLocals": false, // 사용하지 않는 지역 변수에 대한 검사를 비활성화
    "noUnusedParameters": false, // 사용하지 않는 매개 변수에 대한 검사를 비활성화
    "noFallthroughCasesInSwitch": false, // switch 문의 fallthrough 케이스에 대한 검사를 비활성화

    "baseUrl": ".",
    "paths": {
      "@apis/*": ["apis/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@Layout/*": ["Layout/*"],
      "@pages/*": ["pages/*"],
      "@types/*": ["types/*"],
      "@routes/*": ["routes/*"],
      "@recoil/*": ["recoil/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "./src/@types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
